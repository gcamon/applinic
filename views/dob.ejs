   <div class="container mt-3">
        <div style="margin: 0 auto; width: 70%">
            <h2 style="text-align: center;" class="text-primary">Applinic</h2>
            <form class="row" action="/patient/dob" method="POST">
                <p style="text-align: center;font-size: 18px">
                    We need your <b>Date of Birth</b> to enable us keep timely records of your medical history.
                </p>
                <p class="text-danger" style="text-align: center;"><%= message %></p>
                <div style="text-align: center;">
                    <fieldset>                       
                        <div class="field-inline-block">
                        <br>
                          <label>DD</label>
                          <input type="text" name="day" maxlength="2" size="5" id="txt1" required/>
                        </div>
                        /
                        <div class="field-inline-block">
                        <br>
                          <label>MM</label>
                          <input type="text" name="month"  maxlength="2" size="5" id="txt2" required />
                        </div>
                        /
                        <div class="field-inline-block">
                          <br>
                          <label>YYYY</label>
                          <input type="text" name="year"  maxlength="4" size="7" id="txt3" required/>
                        </div>                      
                        <p><small>E.g. 26/04/1980</small></p>
                        <div style="visibility: hidden;height: 3px">
                            <input type="text" value="<%= id %>" name="id" name="">
                        </div>
                    </fieldset>
                    <div >
                        <button type="button" class="btn-muted btn btn-fade btn-block" name="" id="btnFade">Submit</button>
                        <input type="submit" value="Submit"  id="btn" class="btn btn-block btn-primary" name="">
                    </div>
                </div>
            </form><br><br>
            <a href="/">Back to home</a><br>
            <a href="/login">Log in</a>
        </div>
    </div> 
    <script type="text/javascript">
        $("#btn").hide();

        $('#txt1').keyup(function() {
            if(this.value.length == $(this).attr('maxlength')) {
                $('#txt2').focus();
            }
        });

        $('#txt2').keyup(function() {
            if(this.value.length == $(this).attr('maxlength')) {
                $('#txt3').focus();
            }
        });

        $('#txt3').keyup(function() {
            if(this.value.length == $(this).attr('maxlength')) {
                //$('#txt2').focus();
                $("#btnFade").hide();
                $("#btn").show();
            }
        });
        
    </script>
