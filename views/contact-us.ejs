          <div class="container" ng-controller="contactController">
          <h3 class="p-2">Contact Us</h3>

<div class="row">
    <div class="col-md-6 col-sm-12">
        <p class="p-2 bg-info" style="text-align: center; color: #fff" ng-cloak ng-if="responseMessage">{{responseMessage}}</p>
        <div class="col-md-10">
            
            <form style="margin-bottom: 40px">
                <label><b>Send us Message</b></label>
                <div class="form-group">
                    <label>Full Name</label>
                    <input type="text" class="form-control" placeholder="" ng-model="contact.names">
                </div>

                <div class="form-group">
                    <label>Phone Number</label>
                    <input type="text" class="form-control" placeholder="" ng-model="contact.phone">
                </div>
                 <div class="form-group">
                    <label>Email Address</label>
                    <input type="text" class="form-control" placeholder="" ng-model="contact.email">
                </div>

                <div class="form-group">
                    <label>Message</label>
                    <textarea type="text" class="form-control" style="border: 1px solid #ccc" placeholder="Write..." rows="10" ng-model="contact.message"></textarea>

                </div>

                <div class="form-group">
                    <button class="btn btn-success" ng-click="sendMessage()" ng-cloak> <i class="fa fa-spinner fa-pulse fa-1x fa-fw" style="color:#fff" ng-if="loading"></i>{{(loading) ? " " : (responseMessage) ? "Sent!" : "Send"}}</button>
        
                </div>
            </form>
        </div>
    </div>

