                                    <section class="card p-3 mt-3">
                                      <h5 class="pt-2"><b>Similar Skills</b></h5>
                                      <hr class="bg-muted">
                                      <% for(var i = 0; i < related.length; i++) { %> 
                                        <a href="" class="text-muted">
