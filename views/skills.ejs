            <main id="main" class="tg-haslayout complaint-main" ng-controller="skillController" style="" ng-cloak>
                <section class="container">                    
                    <div class="row">
                        <div class="col-sm-12 col-md-12 col-lg-12">                           
                            <div class="row">
                                <div class="col-sm-12 col-md-8 col-lg-8">
                                  
                                    <section class="card mt-3 p-4"> 
                                       <header style="position: relative;" class="pt-2">
                                         <img src="<%= skill.profile_pic_url %>" style="width: 75px;height: auto;float: left;">
                                         <article style="display: inline-block;padding-left: 8px">
                                           <div><b style="font-size: 18px"> <%= skill.name %> </b></div>
                                           <div><span style="font-size: 12px"> <%= skill.specialty %> </span></div>
                                           <div><span style="font-size: 12px"> <b><%= skill.work_place %></b> <%= skill.city %> <%= skill.country %></span></div>
                                         </article>
                                         <a href="<%= skill.profile_url %>" class="btn btn-info btn-sm" style="position: absolute;top:5px;right: 5px;">view profile</a>
                                       </header>
                                       <hr class="bg-muted">
                                       <section>
                                         <h3><%= skill.skill %>
                                           <span style="font-size: 12px;display: block;"> <b class="text-muted">{{<%= skill.date %> | date: "mediumDate"}}</b></span>
                                           <span style="font-size: 14px;display: block;position: relative;margin-top: 10px">
                                           <div class="fb-share-button" data-href="<%= skill.ref_url %>" data-layout="button_count" data-size="small" data-mobile-iframe="true" style="display: inline-block;margin-left: 10px"><a target="_blank" href="https://www.facebook.com/sharer/sharer.php?u=https%3A%2F%2Fdevelopers.facebook.com%2Fdocs%2Fplugins%2F&amp;src=sdkpreparse" class="fb-xfbml-parse-ignore">Share</a>
                                           </div> 

                                          <a href="https://twitter.com/share?ref_src=twsrc%5Etfw" class="twitter-share-button" data-show-count="false">Tweet</a>

                                           <span style="position: absolute;right: 30px;top: 0"><%= skill.comments.length %>  <i class="fa fa-comment text-muted"></i> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp; <!--<%= skill.views %> <i class="fa fa-eye text-muted"></i></span>--></span>

                                         </h3>
                                         <div style="text-align: center;max-height: 550px;overflow-y: hidden;">
                                            <img src="<%= skill.files[0].path %>" style="width: 100%;height: auto;" ng-if="'<%= skill.files[0].path %>'">
                                         </div> 
                                         <div style="font-size: 18px;padding: 20px 0;line-height: 28px" ng-bind-html="trustAsHtml('<%= skill.procedure_description %>')"></div>

                                         <div style="padding-bottom: 40px">
                                           <h5><b>Comments</b></h5>
                                           <hr><!-- -->
                                           <% for(var i = skill.comments.length - 1; i >= 0 ; i--) { %>                       
                                             <div style="margin-bottom: 30px">
                                               <img src="<%= skill.profile_pic_url %>" style="width: 45px;height: auto;;float: left;">
                                               <article style="display: inline-block;padding-left: 10px">
                                                 <span style="display: block;padding-bottom: 5px">
                                                    <b style=""><%= skill.comments[i].name %></b><br>
                                                    <small am-time-ago="'<%= skill.comments[i].date %>'"></small>
                                                 </span>
                                                 <span ng-bind-html="'<%= skill.comments[i].article %>'"></span>
                                               </article>
                                             </div>
                                           <% } %>
                                           <form>
                                             <div>
                                               <label><b>Write your comment</b></label>
                                             </div>
                                             <div>
                                               <textarea class="form-control" placeholder="Write..." style="height: 200px;padding:10px" ng-model="article">
                                                 
                                               </textarea>
                                             </div>
                                             <div>
                                               <a href="" class="btn btn-danger btn-sm" ng-click="post('<%= skill._id %>')"><i class="fa fa-spinner fa-pulse fa-1x fa-fw" ng-if="laoding"></i>{{(loading) ? 'posting...' : 'Post'}}</a>
                                               <span ng-if="info" ng-bind-html="info"></span>
                                             </div>
                                           </form>
                                         </div>                                     

                                       </section>
                                    </section>
                                    <!--<div style="font-size: 22px;padding: 80px 100px" ng-if="loading">
                                       <i class="fa fa-spinner fa-pulse fa-1x fa-fw" style="color:orange" ng-if="loading"></i> 
                                    </div>-->
                                    
