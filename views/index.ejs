    <script type="text/ng-template" id="home-page-search.html">
        <div class="modal fade">
        <div class="modal-dialog">
          <div class="modal-content" style="position: absolute; top:10;">
            <div class="modal-header" style="position: relative;">
                <strong style="font-weight: 100;font-size: 22px">Hey, look what we found!</strong>
                <a href=""  style="position: absolute;right: 20px;top: 25px" class="close"  data-dismiss="modal" aria-hidden="true">&times;</a>       
            </div><hr>
             <div  style="padding: 20px;margin-bottom: 20px;font-size: 14px"> 
             <span ng-if="user.category !== 'Doctor'" class="text-info"> You can search for more items at once from your account. <a href="/login">log in</a> or <a href="/signup">create account</a> now!</span>
                <p>Showing {{searchResult.length}} result(s) for <b>{{user.item}}</b> in <b>{{user.city}}</b> category <b>{{user.category}}</b></p> 
                <div style="padding-right: 5px"><input type="text" class="form-control" placeholder="filter by name, address, work place etc" ng-model="filt" name="">

                </div>
                <div ng-repeat="found in searchResult | filter : filt" style="padding: 5px; max-height: 800px;overflow-y: auto;position: relative;">    <!--<img src="{{found.profile_pic_url}}" style="width: 75px;height: auto;float: left;">-->
                    <div style="display: inline-block;padding-left: 10px; margin:5px;">
                    <span ng-bind-html = "found.msg" class="text-info"></span>
                    <strong style="display: block;max-width: 90%;font-size: 16px">{{found.name}} <sup ng-if='found.addBy' class="font_1-2 text-danger">*</sup></strong>
                     <!--<strong style="display: block;max-width: 90%;font-size: 16px"> <span ng-if="user.category == 'Doctor'">{{found.title}}</span> {{found.firstname}} {{found.lastname}} {{found.name}}</strong>-->
                    <span style="display: block;max-width: 80%" ng-if="found.specialty"><b>{{found.specialty}}</b> <span ng-if="found.education.length > 0">|</span> <span ng-repeat="e in found.education">{{e.certificate}}</span></span>
                    <span style="display: block;max-width: 80%"> <span ng-if="found.work_place"><b>works at</b> | <em>{{found.work_place}}</em> </span><em ng-if="user.category !== 'Doctor'">{{found.address}}</em> {{found.city}} {{found.country}}</span>  
                    <p ng-if="found.skill" class="pt-1"><a href="{{found.ref_url}}" target="_blank" style="color: blue">{{found.skill}}</a></p>       
                    <small ng-click="account(found)"><i class="fa fa-comment text-muted" title="chat with {{found.firstname || found.name}}"></i></small>&nbsp;
                    <small ng-click="account(found)"><i class="fa fa-phone text-muted" title="call {{found.firstname || found.name}}"></i></small>&nbsp;
                    <small ng-click="account(found)"><i class="fa fa-video-camera text-muted" title="video chat with {{found.firstname || found.name}}"></i></small>&nbsp;
                    <small ng-click="account(found)"><i class="fa fa-share text-muted" title="forward to {{found.firstname || found.name}}"></i></small>&nbsp; <a href="{{(found.profile_url) ? found.profile_url : ('https://applinic.com/user/profile/view/' + found.id)}}" class="text-danger" target="_blank">view profile <i class="fa fa-external-link"></i></a><br>
                    </div>
                    <a href="" class="btn btn-info btn-sm" style="position: absolute;top: 10px;right: 10px" ng-click="account(found)" ng-if="user.category == 'Doctor'|| user.category == 'Special Center' || user.category == 'Disease' && user.category !=='Skills & Procedures' && user.category !=='Pharmacy' && user.category !=='Radiology' && user.category !=='Laboratory'" title="send consultation request to {{found.title}} {{found.firstname}} {{found.lastname}}">Book</a>
                    <a href="{{found.ref_url}}" target="_blank" class="" style="position: absolute;top: 10px;right: 10px"  ng-if=" user.category =='Skills & Procedures'" title="Learn more about {{found.skill}} {{found.firstname}} {{found.lastname}}"><i class="fa fa-eye" style="font-size: 26px"></i></a>
                    <a href="" class="btn btn-danger btn-sm" style="position: absolute;top: 10px;right: 10px" ng-click="account(found,user.category)" ng-if="user.category == 'Pharmacy' || user.category == 'Laboratory' || user.category == 'Radiology'" title="Forward {{user.item}} to {{found.name}}"><i class="fa fa-share"></i></a>
                    <hr class="text-muted">                
                </div> 
              
                <div ng-if="loading" style="text-align: center;margin-top: 20px"><i class="fa fa-spinner fa-pulse fa-1x fa-fw" style="color:orange" ng-if="loading"></i></div>
                <p ng-if="searchResult.length == 0 && !loading" style="text-align: center">Oops! No result was found.</p>        
            </div>
        </div>
      </div>
</script>






