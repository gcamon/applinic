<script type="text/ng-template" id="request.html">
         <div class="modal fade">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
              <div class="row">
                <button type="button" class="close" ng-click="close('Cancel')" data-dismiss="modal" aria-hidden="true">&times;</button>
                 <h6 style="text-align: center; color: #000; font-size: 12px">{{message}}</h6>
              </div>
              <div class="modal-body">
              <h6 style="text-align: center">You want to send Consultation request 
                <span style="display:block;margin-top: 20px">To</span> 
                </h6> 
                                                                              
                    <form class="tg-form-modal tg-form-signin" style="text-align: center">                        
                            <fieldset>
                            <img ng-src="{{docInfo.profile_pic_url}}" style="width:150px; height:150px;margin-bottom: 20px;margin-top:-10px"/>
                            <h6>Dr. {{docInfo.firstname}} {{docInfo.lastname}}</h6>
                            <span style="display:block;margin-top: -10px; margin-bottom:20px">{{docInfo.specialty}}</span>
                            <p>Note: consultation fees will apply if your request is granted. </p>                                 
                        <button class="tg-btn tg-btn-lg" ng-click="sendRequest()">Continue</button>
                            </fieldset>
                        </form>
              </div>
              <div class="modal-footer">
                <button type="button" ng-click="close('No')" class="btn btn-default" data-dismiss="modal">No</button>
              </div>
            </div>
          </div>
        </div>
     </script>


     <script type="text/ng-template" id="question.html">
         <div class="modal fade">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
              <div class="row">
                <button type="button" class="close" ng-click="close('Yes')" data-dismiss="modal">&times;</button>
                <h6 style="color: #000; font-size: 12px;text-align: center">{{message}}</h6> 
                <div class="col-md-12 col-lg-12">
                  <img ng-src="{{docInfo.profile_pic_url}}" style="width:100px; height:100px"/>
                  <span>{{docInfo.title}} {{docInfo.firstname}} {{docInfo.lastname}}</span>
                </div>                
                              
              </div>
              <div class="modal-body">                                                   
                  <form>                        
                    <fieldset>

                        <caption>What your question?</caption>

                        <div>
                            <textarea style="height: 300px; color: black" placeholder="write.." ng-model="patient.message"></textarea>
                        </div>
                        <button class="btn btn-primary" ng-click="getAnswer()">Get answer</button>
                      </fieldset>
                </form>
              </div>
              <div class="modal-footer">
                <!--<button type="button" ng-click="close('No')" class="btn btn-default" data-dismiss="modal">No</button>
                <button type="button" ng-click="close('Yes')" class="btn btn-primary" data-dismiss="modal">Yes</button>-->
              </div>
            </div>
          </div>
        </div>
     </script>

    <script type="text/ng-template" id="skill-modal.html">
       <div class="modal fade">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
            <div class="row">
              <button type="button" class="close" ng-click="close('Yes')" data-dismiss="modal">&times;</button>
               <img ng-src="{{docInfo.profile_pic_url}}" style="max-width:3em; max-height:3em"/>
               <span style="display:inline-block;padding: 10px">{{docInfo.title}} {{docInfo.firstname}} {{docInfo.lastname}}  <span style="display: block;font-size: 0.7em">{{docInfo.specialty}}</span></span> 
                          
            </div>
            <div class="modal-body" style="max-height: 800px;overflow-y: auto;">  
              <h2 style="text-align:center;text-decoration: underline;">{{skill.skill}}</h2>
              <section>
                <p>{{skill.procedure_description}}</p>
                <div ng-repeat = "file in skill.files">
                  <div style="text-decoration: underline;" ng-if="file.type === 'video/mp4'">
                     <h6>Video</h6>
                     <video  style="width: 100%;height:480px" controls
                        poster="https://archive.org/download/WebmVp8Vorbis/webmvp8.gif"  class="img-responsive">  
                        <source
                          ng-src="{{file.path}}"
                          type="video/mp4">                                              
                        Your browser doesn't support HTML5 video tag.
                      </video>
                  </div>
                  <div style="text-decoration: underline;" ng-if="file.type === 'image/jpg' || file.type === 'image/jpeg' || file.type === 'image/png'">
                    <h6>Image</h6>
                    <img src="{{file.path}}" class="img-responsive" alt="Sample image" style="max-height:650px;width:100%">
                  </div>
                </div>                
              </section>                                                 
                 
            </div>
            <div class="modal-footer">
              <!--<button type="button" ng-click="close('No')" class="btn btn-default" data-dismiss="modal">No</button>
              <button type="button" ng-click="close('Yes')" class="btn btn-primary" data-dismiss="modal">Yes</button>-->
            </div>
          </div>
        </div>
      </div>
   </script>

     

